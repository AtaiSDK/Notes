<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container_view_tag"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment"
    android:background="@color/grey">

  <EditText
      android:id="@+id/editSearch"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_edittext"
      android:hint="Search"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@id/sort_btn"
      android:padding="12dp"
      android:layout_margin="12dp" />

  <TextView
      android:id="@+id/textTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Title"
      android:layout_margin="12dp"
      app:layout_constraintStart_toEndOf="@id/image"
      app:layout_constraintTop_toBottomOf="@id/editSearch"
    />

  <TextView
      android:id="@+id/textDescription"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:text="Description of the note this can be any content"
      android:layout_margin="12dp"
      app:layout_constraintStart_toEndOf="@id/image"
      app:layout_constraintTop_toBottomOf="@id/textTitle"
      />

  <TextView
      android:id="@+id/textDate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="10dp"
      android:text="12/12/2023 12:20"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="80dp"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginRight="12dp"
      app:layout_constraintTop_toBottomOf="@id/textDescription"

      />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/button1"
      android:layout_width="15dp"
      android:layout_height="15dp"
      android:layout_margin="15dp"
      android:background="@drawable/vector_2"
      app:layout_constraintStart_toEndOf="@+id/textTitle"
      app:layout_constraintTop_toBottomOf="@id/editSearch"
      app:layout_constraintEnd_toEndOf="parent"
    />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/button2"
      android:layout_width="15dp"
      android:layout_height="15dp"
      android:layout_margin="15dp"
      android:background="@drawable/ic_vector_3"
      app:layout_constraintStart_toEndOf="@id/button1"
      app:layout_constraintTop_toBottomOf="@id/editSearch"
    />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/button3"
      android:layout_width="15dp"
      android:layout_height="15dp"
      app:layout_constraintStart_toEndOf="@id/button2"
      app:layout_constraintTop_toBottomOf="@id/editSearch"
      android:layout_margin="15dp"
      android:background="@drawable/ic_vector_4"

    />
  <ImageView
      android:id="@+id/image"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_margin="12dp"
      android:background="@drawable/bg_image"
      app:layout_constraintTop_toBottomOf="@id/editSearch"
      app:layout_constraintStart_toStartOf="parent"
    />
  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/sort_btn"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="@drawable/bg_sort"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_margin="12dp"/>

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/add_btn"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:background="@drawable/bg_add"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_margin="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>